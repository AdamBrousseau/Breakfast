<p>
  <%= f.label :doctor %>
  <%= f.collection_select(:doctor, @user.contacts.where(:honorific => 'Dr'), :name, :name, :prompt => true) %>
</p>
<p>
  <%= f.label :appointment_date %>
  <%= f.date_select :appointment_date %>
</p>    
<p>
  <%= f.label :reason %>
  <%= f.collection_select(:reason, @phr.ailments.all, :ailment_name, :ailment_name, :prompt => true) %>
</p>    
<p>
  <%= f.label :results %>
  <%= f.text_area :results %>
</p>
<p>
  <%= f.submit "Submit", :class => "btn btn-small btn-secondary" %> 
  <%= link_to 'Cancel', phr_appointments_path, class: "btn btn-small btn-secondary" %>
</p>
