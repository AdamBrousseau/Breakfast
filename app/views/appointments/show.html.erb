<% provide(:title, "Appointment: " + @appointment.reason) %>

<div class ='row'>
	<%= render 'shared/phr_info' %>

	<section>
		<div class="span8">
			<h2 style = "text-align: left;">Appointment</h2>
			<hr>
			<h4><%= @appointment.reason %></h4>
			<table class ="table table-striped table-bordered table-condensed">
				<tbody>
					<tr>
						<td col width="75">Date</td>
						<td><%= @appointment.appointment_date.strftime('%B %-d, %Y') %></td>
					</tr>
					<tr>
						<td col width="75">Doctor</td>
						<td><%= "Dr. " + @appointment.doctor %></td>
					</tr>
					<tr>
						<td col width="75">Results</td>
						<td><%= @appointment.results %></td>
					</tr>
				</tbody>
			</table>	

			<p>
				<%= link_to "Edit", edit_phr_appointment_path(@phr,@appointment), class: "btn btn-small btn-secondary" %>
				<%= link_to "Done", phr_appointments_path(@phr), class: "btn btn-small btn-secondary" %> 
			</p>
		</div>
	</section>
</div>