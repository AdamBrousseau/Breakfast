<% provide(:title, "Appointments") %>

<div class="row">
  <%= render 'shared/phr_info' %>
  <section>
  <div class="span8">
  <h2 style="text-align:left;">Appointments</h2>
  <hr>
  <%= link_to "+New Record", new_phr_appointment_path, class: "btn btn-small btn-secondary" %>
  <br>
  <br>
    
    <%= calendar @appointments do |appointment| %>
      <%= link_to appointment.doctor, [appointment.phr, appointment] %>
    <% end %>
    <% if @phr.appointments.any? %>

      	<table class="table table-striped table-bordered table-condensed">
      		<thead>
        		<tr>
        			<th style = "width:24%">Date</th>
          		<th style = "width:56%">Reason for Appointment</th>
          		<th style = "width:5%"></th>
          		<th style = "width:5%"></th>
        		</tr>
      		</thead>
      		<tbody>
      		  <%= render @appointments %>
            <%= will_paginate @appointments %>
      		</tbody>
    	</table>
    	<table>
		    <td><%= will_paginate(@contacts) %></td>
  		</table>

    <% else %>
      You have no Appointments<br><br>
    <% end %>
    <%= link_to 'Back', @phr, class: "btn btn-small btn-secondary"%>
    <br>
    <br>

  </div>
  </section>  


</div>