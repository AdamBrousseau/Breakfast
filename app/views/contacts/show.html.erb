<% provide(:title, @contact.name) %>
<h2 style="text-align:center;"><%= @contact.honorific %>. <%= @contact.name %> </h2>
<hr>
<aside class="span6 offset3"> 
<p>
  <strong>Primary Phone:</strong>
  <%= @contact.phone1 %>
</p>

<p>
  <strong>Secondary Phone:</strong>
  <%= @contact.phone2 %>
</p>

<p>
  <strong>Email:</strong>
  <%= @contact.email %>
</p>

<p>
  <strong>Description:</strong>
  <%= @contact.description %>
</p>

<%= link_to 'Edit Contact', edit_contact_path(@contact), class: "btn btn-small btn-secondary" %>

<%= link_to 'Back', contacts_path, class: "btn btn-small btn-secondary" %>
</aside>